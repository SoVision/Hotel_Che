<table class="table table-hover">
  <tr>
    <th>Iм'я</th>
    <th>Позицiя</th>
    <th>Стать</th>
    <th>Номер телефону</th>
    <th>Дата народження</th>
    <th>Зарплата</th>
    <th><%= link_to "Додати запис", new_employee_path, :class =>'btn btn-success btn-sm'%></th>
  </tr>
  <% Employee.all.each do |employee| %>
    <tr>
      <td><%= employee.name %></td>
      <td><%= employee.position %></td>
      <td><%= employee.gender %></td>
      <td><%= employee.phone_number %></td>
      <td><%= employee.birthday.strftime("%m/%d/%Y") %></td>
      <td><%= employee.salary %></td>
      <td width = "200px"><%= link_to "Редагувати", edit_employee_path(employee.id), :class =>'btn btn-warning btn-sm'%>
        <%= link_to "Видалити", employee_path(employee.id), method: :delete, data:{confirm: "Видалити запис?"}, :class =>'btn btn-danger btn-sm'%></td>
    </tr>
  <% end %>

</table>